CREATE TABLE collaboration (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    singer1_id INTEGER,
    singer2_id INTEGER);
    
INSERT INTO collaboration (singer1_id, singer2_id) VALUES (1, 2);
